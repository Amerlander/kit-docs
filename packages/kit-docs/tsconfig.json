{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "$lib": ["src/lib"],
      "$lib/*": ["src/lib/*"],
      "$actions/*": ["src/lib/actions/*"],
      "$components/*": ["src/lib/components/*"],
      "$utils/*": ["src/lib/utils/*"],
      "$stores/*": ["src/lib/stores/*"],
      "$$client": ["client/index"],
      "$$node": ["node/index"]
    }
  }
}
